{
  "name": "webav-player",
  "version": "1.0.0",
  "description": "Modern web audio/video player with WebGPU, WebGL, AudioWorklet, and WebCodecs support",
  "main": "src/main.js",
  "keywords": [
    "webav",
    "video",
    "audio",
    "player",
    "webgpu",
    "webgl",
    "webcodecs",
    "audioworklet"
  ],
  "author": "WebAV Player Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "start": "webpack serve --mode development --open",
    "clean": "rm -rf dist",
    "clean:all": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "mp4box": "^0.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/runtime": "^7.23.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "core-js": "^3.45.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "util": "^0.12.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "browserslist": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ]
}
